{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "lib": [
      "es2020"
    ],
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "types": [
      "node",
      "express"
    ], // Add express here
    "skipLibCheck": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}